<% layout('./layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form action="/campgrounds" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
      <h1>Add new campground</h1>
      <div class="mb-3">
        <label class="form-label" for="title">Campground name</label>
        <input id="title" class="form-control" type="text" name="campground[title]" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input id="price" type="text" class="form-control" name="campground[price]" placeholder="0.00" aria-label="Price" aria-describedby="price-label" required>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Campground location</label>
        <input class="form-control" id="location" class="form-control" type="text" name="campground[location]" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Campground Photo</label>
        <input class="form-control" type="file" name="image" id="image" multiple>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Campground description</label>
        <textarea id="description" class="form-control" name="campground[description]" rows="5" required></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success" type="submit">Submit</button>
      </div>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>